                                <a href="#"  onclick="openRightMenu()" class="cart_box">
                                    <span class="qut_counter">
                                        {% if app.session.get('CART')|default(null) %}
                                            {{ app.session.get('CART').cartLines.count }}
                                        {% else %}
                                            0
                                        {% endif %}
                                    </span><i class="ti-shopping-cart"></i>
                                </a>
                            </div>
                            <div class="ss_cart_content">
                                <strong>{% trans %}My Cart{% endtrans %}</strong>
                                <span>
                                    {% if app.session.get('CART')|default(null) %}
                                        {% if  "Morroco" == app.session.get('City') %}
